// src/app.module.ts
import { Module } from '@nestjs/common';
import { TypeOrmModule } from '@nestjs/typeorm';

import { MailerModule } from '@nestjs-modules/mailer';
import { HandlebarsAdapter } from '@nestjs-modules/mailer/dist/adapters/handlebars.adapter';
import { join } from 'path';

import { SettingsModule } from './settings/settings.module';
import { AdminModule } from './admin/admin.module';
import { WorkerModule } from './worker/worker.module';
import { AuthModule } from './auth/auth.module';
import { CatamaransModule } from './catamarans/catamarans.module';
import { RentalsModule } from './rentals/rentals.module';
import { CommentsModule } from './comments/comments.module';
import { ReportModule } from './report/report.module';
// import { NotificationsModule } from './notifications/notifications.module';

@Module({
  imports: [
    TypeOrmModule.forRoot({
      type: 'mysql',
      host: process.env.DB_HOST || 'localhost',
      port: parseInt(process.env.DB_PORT || '3306', 10),
      username: process.env.DB_USER || 'root',
      password: process.env.DB_PASS || 'FFb4Pes2',
      database: process.env.DB_NAME || 'catamaran_db',
      entities: [__dirname + '/**/*.entity{.ts,.js}'],
      synchronize: true, // В разработке можно оставить true, в продакшене следует отключить
      dropSchema: false,
    }),
    MailerModule.forRoot({
      transport: {
        host: process.env.SMTP_HOST || 'smtp.mail.ru',
        port: Number(process.env.SMTP_PORT) || 465,
        secure: true,
        auth: {
          user: process.env.SMTP_USER || 'shest.andrey@bk.ru',
          pass: process.env.SMTP_PASS || '9GfChZp2EeQNDUmLfPwa',
        },
        tls: {
          // если ваш провайдер имеет самоподписанный сертификат,
          // или вам нужно отключить проверку:
          rejectUnauthorized: false,
        },
        connectionTimeout: 10000,
        greetingTimeout: 5000,
      },
      defaults: {
        from: `"Catamaran Rental" <${process.env.SMTP_USER}>`,
      },
      template: {
        dir: join(__dirname, '..', 'email-templates'),
        adapter: new HandlebarsAdapter(), // шаблоны Handlebars
        options: { strict: true },
      },
    }),
    // NotificationsModule,
    SettingsModule,
    AdminModule,
    WorkerModule,
    AuthModule,
    CatamaransModule,
    RentalsModule,
    CommentsModule,
    ReportModule,
  ],
})
export class AppModule {}
